<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="match_parent"
        android:layout_height="608px"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/pb_top"
        android:layout_width="128px"
        android:layout_height="128px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240px"
        android:indeterminate="true" />

    <View
        android:layout_width="1080px"
        android:layout_height="304px"
        android:layout_alignBottom="@id/image_top"
        android:background="@drawable/gradient_square" />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/image_top"
        android:layout_marginBottom="36px"
        android:layout_marginRight="36px"
        android:id="@+id/image_avatar"
        android:scaleType="centerCrop"
        android:layout_width="128px"
        android:layout_height="128px" />

    <TextView
        android:id="@+id/text_top_author"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_top"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="36px"
        android:alpha="0.6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="36px" />

    <TextView
        android:id="@+id/text_top_title"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_top_author"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="36px"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="65px" />

    >


    <ImageView
        android:id="@+id/image_left"
        android:layout_width="540px"
        android:layout_height="1080px"
        android:layout_below="@id/image_top"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/pb_left"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignTop="@id/image_left"
        android:layout_marginTop="540px"
        android:layout_marginLeft="270px"
        android:indeterminate="true" />

    <View
        android:layout_width="540px"
        android:layout_height="270px"
        android:layout_alignBottom="@id/image_left"
        android:background="@drawable/gradient_square" />

    <TextView
        android:id="@+id/text_left_author"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_left"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="36px"
        android:alpha="0.6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/text_left_title"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_left_author"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="36px"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="45px" />


    <ImageView
        android:id="@+id/image_right_top"
        android:layout_width="540px"
        android:layout_height="540px"
        android:layout_below="@id/image_top"
        android:layout_toRightOf="@id/image_left"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/pb_right_top"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignLeft="@id/image_right_top"
        android:layout_alignTop="@id/image_right_top"
        android:layout_marginLeft="238px"
        android:layout_marginTop="238px"
        android:indeterminate="true" />

    <View
        android:layout_width="540px"
        android:layout_height="270px"
        android:layout_alignBottom="@id/image_right_top"
        android:layout_alignLeft="@id/image_right_top"
        android:background="@drawable/gradient_square" />

    <TextView
        android:id="@+id/text_right_top_author"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_right_top"
        android:layout_alignLeft="@id/image_right_top"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="36px"
        android:alpha="0.6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/text_right_top_title"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_right_top_author"
        android:layout_alignLeft="@id/image_right_top"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="36px"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="45px" />


    <ImageView
        android:id="@+id/image_right_bottom"
        android:layout_width="540px"
        android:layout_height="540px"
        android:layout_below="@id/image_right_top"
        android:layout_toRightOf="@id/image_left"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/pb_right_bottom"
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_alignLeft="@id/image_right_bottom"
        android:layout_alignTop="@id/image_right_bottom"
        android:layout_marginLeft="238px"
        android:layout_marginTop="238px"
        android:indeterminate="true" />

    <View
        android:layout_width="540px"
        android:layout_height="270px"
        android:layout_alignBottom="@id/image_right_bottom"
        android:layout_alignLeft="@id/image_right_bottom"
        android:background="@drawable/gradient_square" />

    <TextView
        android:id="@+id/text_right_bottom_author"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_right_bottom"
        android:layout_alignLeft="@id/image_right_bottom"
        android:layout_marginBottom="48px"
        android:layout_marginLeft="36px"
        android:alpha="0.6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/text_right_bottom_title"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_right_bottom_author"
        android:layout_alignLeft="@id/image_right_bottom"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="36px"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="45px" />


</RelativeLayout>